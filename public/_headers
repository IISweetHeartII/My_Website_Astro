# 보안 헤더 (모든 경로)
/*
  # HTTPS 강제 (1년, 서브도메인 포함, preload)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Content Security Policy (XSS 방어)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://giscus.app; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://www.google-analytics.com https://giscus.app https://bugshot-api.log8.kr; frame-src https://giscus.app https://www.youtube.com; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests

  # 클릭재킹 방어
  X-Frame-Options: DENY

  # MIME 타입 스니핑 방지
  X-Content-Type-Options: nosniff

  # Referrer 정책
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy (불필요한 기능 비활성화)
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=(), interest-cohort=()

# HTML 페이지 (짧은 캐시)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# 루트 페이지
/
  Cache-Control: public, max-age=3600, must-revalidate

# API 엔드포인트 (캐시 안함)
/api/*
  Cache-Control: no-cache, no-store, must-revalidate

# Astro 빌드 파일 (긴 캐시 - 파일명에 해시 포함)
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# 폰트 파일 (긴 캐시)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# 이미지 파일 (1개월 캐시)
/images/*
  Cache-Control: public, max-age=2592000, immutable

# 정적 파일 (favicon, manifest 등)
/*.ico
  Cache-Control: public, max-age=86400, must-revalidate

/*.json
  Cache-Control: public, max-age=86400, must-revalidate

/*.xml
  Cache-Control: public, max-age=86400, must-revalidate

/*.txt
  Cache-Control: public, max-age=86400, must-revalidate
