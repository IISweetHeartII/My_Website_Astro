---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@/shared/components/ui/FormattedDate.astro";
import { getUrl } from "@/shared/utils/url";

interface Props {
  posts: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;
---

{posts.length > 0 && (
  <section class="related-posts mt-12 pt-8 border-t border-background-lighter">
    <h2 class="text-2xl font-bold text-text mb-6 text-center">관련 글</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {posts.map((post) => {
        const slug = post.data.slug || post.id.replace(/\.[^/.]+$/, "");
        return (
          <a
            href={getUrl(`/blog/${slug}/`)}
            class="group block p-4 rounded-xl border border-background-lighter bg-background-light hover:border-primary/50 transition-all duration-200 no-underline"
          >
            <span class="text-xs text-primary font-medium">{post.data.category}</span>
            <h3 class="text-base font-semibold text-text mt-1 mb-2 group-hover:text-primary transition-colors line-clamp-2">
              {post.data.title}
            </h3>
            {post.data.description && (
              <p class="text-sm text-text/70 line-clamp-1 mb-2">{post.data.description}</p>
            )}
            {post.data.created_date && (
              <div class="text-xs text-text/50">
                <FormattedDate date={post.data.created_date} />
              </div>
            )}
          </a>
        );
      })}
    </div>
  </section>
)}
