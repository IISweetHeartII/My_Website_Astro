---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "@/shared/config/consts";
---

<Layout
  title={`Contact - ${SITE_TITLE}`}
  description="Get in touch with us for any questions or concerns."
>
  <main class="container mx-auto p-8">
    <h1 class="text-4xl md:text-5xl font-bold text-text text-center mb-8 tracking-tight">
      Get in Touch
    </h1>
    <div class="max-w-lg mx-auto">
      <form action="https://formspree.io/f/xrbqwgov" method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-text">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            required
            class="mt-1 block w-full p-3 border border-primary-light rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent text-text"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-text">Email</label>
          <input
            type="email"
            name="_replyto"
            id="email"
            required
            class="mt-1 block w-full p-3 border border-primary-light rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent text-text"
          />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-text">Message</label>
          <textarea
            name="message"
            id="message"
            rows="4"
            required
            class="mt-1 block w-full p-3 border border-primary-light rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent text-text"
          ></textarea>
        </div>
        <div class="text-center">
          <button
            type="submit"
            class="inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-md text-text bg-accent hover:bg-accent-mint focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
    <p class="mt-8 text-center text-sm text-primary">
      Your email will be sent to sachi009955@gmail.com via Formspree.
    </p>
  </main>
</Layout>
