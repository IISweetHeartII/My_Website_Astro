---
import Layout from '../layouts/Layout.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const title = `Contact - ${SITE_TITLE}`;
const description = "Get in touch with us for any questions or concerns.";
---

<Layout title="Contact | Log8">
	<main class="container mx-auto p-8">
		<h1 class="text-4xl md:text-5xl font-bold text-[#1F2937] text-center mb-8 tracking-tight">Get in Touch</h1>
		<div class="max-w-lg mx-auto">
			<form action="https://formspree.io/f/xrbqwgov" method="POST" class="space-y-6">
				<div>
					<label for="name" class="block text-sm font-medium text-[#1F2937]">Name</label>
					<input type="text" name="name" id="name" required class="mt-1 block w-full p-3 border border-[#8590B3] rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00FF6A] focus:border-[#00FF6A] text-[#1F2937]">
				</div>
				<div>
					<label for="email" class="block text-sm font-medium text-[#1F2937]">Email</label>
					<input type="email" name="_replyto" id="email" required class="mt-1 block w-full p-3 border border-[#8590B3] rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00FF6A] focus:border-[#00FF6A] text-[#1F2937]">
				</div>
				<div>
					<label for="message" class="block text-sm font-medium text-[#1F2937]">Message</label>
					<textarea name="message" id="message" rows="4" required class="mt-1 block w-full p-3 border border-[#8590B3] rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00FF6A] focus:border-[#00FF6A] text-[#1F2937]"></textarea>
				</div>
				<div class="text-center">
					<button type="submit" class="inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-md text-[#1F2937] bg-[#00FF6A] hover:bg-[#2DD4BF] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#00FF6A]">
						Send Message
					</button>
				</div>
			</form>
		</div>
		<p class="mt-8 text-center text-sm text-[#485E8E]">
			Your email will be sent to sachi009955@gmail.com via Formspree.
		</p>
	</main>
</Layout> 