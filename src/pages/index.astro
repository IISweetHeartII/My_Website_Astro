---
import { Image } from "astro:assets";
import {
  ArrowRight,
  Award,
  Brain,
  Briefcase,
  Code2,
  FileText,
  Medal,
  Rocket,
  Server,
  Target,
  Users,
} from "lucide-astro";
import profileImage from "@/assets/images/design/DH_ID.jpg";
import BreadcrumbSchema from "@/shared/components/seo/BreadcrumbSchema.astro";
import {
  AUTHOR_GITHUB,
  AUTHOR_LINKEDIN,
  SITE_AUTHOR,
  SITE_DESCRIPTION,
  SITE_URL,
} from "@/shared/config/consts";
import { getLatestPosts, getSortedPublishedPosts } from "@/shared/utils/blog";
import Layout from "../layouts/Layout.astro";

const allPosts = await getSortedPublishedPosts();
const latestBlogPosts = getLatestPosts(allPosts, 3);
const latestPost = latestBlogPosts[0];

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${SITE_URL}/#website`,
  name: "김덕환의 WebSite",
  url: SITE_URL,
  description: SITE_DESCRIPTION,
  inLanguage: "ko-KR",
  publisher: { "@id": `${SITE_URL}/#author` },
};

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": `${SITE_URL}/#author`,
  name: SITE_AUTHOR,
  url: `${SITE_URL}/portfolio`,
  image: `${SITE_URL}/images/design/DH_ID.jpg`,
  jobTitle: "Product Engineer",
  description: SITE_DESCRIPTION,
  sameAs: [AUTHOR_GITHUB, AUTHOR_LINKEDIN],
};
---

<Layout title="Home | Log8">
  <Fragment slot="head">
    <script type="application/ld+json" is:inline set:text={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" is:inline set:text={JSON.stringify(personSchema)} />
    <BreadcrumbSchema items={[{ name: "홈", url: "/" }]} />
  </Fragment>
  <main class="min-h-screen bg-background">
    <!-- Full-screen Hero Section with Vanta.js -->
    <section
      id="hero-section"
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <!-- Vanta.js animated background will be injected here -->

      <!-- Hero Content -->
      <div class="relative z-10 container mx-auto px-4 md:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Left: Text Content -->
            <div class="space-y-8 text-center lg:text-left">
              <!-- Badge -->
              <div
                class="inline-flex items-center gap-2 px-4 py-2 bg-background/80 backdrop-blur-sm border border-background-lighter rounded-full text-sm font-medium text-primary shadow-lg"
              >
                <Target class="w-4 h-4" />
                실전 중심의 문제 해결
              </div>

              <!-- Main Heading -->
              <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-text leading-tight">
                아끼지 않는<br />
                <span
                  class="bg-linear-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent"
                >
                  문제 해결사
                </span>
              </h1>

              <!-- Subtitle -->
              <p class="text-lg md:text-xl lg:text-2xl text-text-light leading-relaxed">
                사람 중심의 AI 제품을 설계하고 구현해,<br class="hidden md:block" />
                고객과 비즈니스의 실제 문제를 해결합니다.
                <strong class="text-text"> 김덕환</strong>입니다.
              </p>

              <!-- CTA Buttons -->
              <div
                class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center pt-4"
              >
                <a
                  href="/blog"
                  class="group inline-flex items-center gap-2 px-8 py-4 bg-primary hover:bg-accent text-on-primary font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-2xl transform hover:-translate-y-1"
                >
                  블로그 보기
                  <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
                </a>
                <a
                  href="/showcase"
                  class="group inline-flex items-center gap-2 px-8 py-4 bg-background hover:bg-background-light text-primary font-semibold rounded-xl border-2 border-primary transition-all duration-300 shadow-lg hover:shadow-xl"
                >
                  프로젝트 보기
                  <Code2 class="w-5 h-5" />
                </a>
                <a
                  href="/portfolio"
                  class="group inline-flex items-center gap-2 px-8 py-4 bg-linear-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-2xl transform hover:-translate-y-1"
                >
                  포트폴리오 보기
                  <Briefcase class="w-5 h-5" />
                </a>
              </div>
            </div>

            <!-- Right: Profile Image -->
            <div class="flex justify-center lg:justify-end">
              <div class="relative">
                <Image
                  src={profileImage}
                  alt="김덕환 프로필 사진"
                  class="w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 rounded-full object-cover shadow-2xl border-8 border-white"
                  widths={[256, 320, 384]}
                  sizes="(max-width: 768px) 256px, (max-width: 1024px) 320px, 384px"
                />
                <!-- Decorative Elements -->
                <div
                  class="absolute -top-4 -right-4 w-24 h-24 bg-purple-300 rounded-full opacity-60 animate-pulse -z-10"
                >
                </div>
                <div
                  class="absolute -bottom-6 -left-6 w-32 h-32 bg-blue-300 rounded-full opacity-40 animate-pulse -z-10"
                  style="animation-delay: 1s"
                >
                </div>
                <div
                  class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full bg-pink-300 rounded-full opacity-20 animate-pulse -z-20"
                  style="animation-delay: 2s"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bento Grid Section -->
    <section class="py-20 px-4 md:px-8">
      <div class="max-w-7xl mx-auto">
        <!-- Grid Layout -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Latest Blog Post - Large Card (2x2) -->
          {
            latestPost && (
              <a
                href={`/blog/${latestPost.data.slug ?? latestPost.id.replace(/\.[^/.]+$/, "")}`}
                class="group lg:col-span-2 lg:row-span-2 bg-linear-to-br from-purple-50 to-pink-50 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-purple-100"
              >
                <div class="h-full flex flex-col justify-between">
                  <div>
                    <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-purple-100 text-purple-700 rounded-full text-sm font-medium mb-4">
                      <FileText class="w-4 h-4" />
                      Recent Post
                    </div>
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4 group-hover:text-purple-600 transition-colors">
                      {latestPost.data.title}
                    </h2>
                    <p class="text-gray-600 mb-6 line-clamp-3">
                      {latestPost.data.description || "블로그 글을 읽어보세요!"}
                    </p>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">
                      {latestPost.data.created_date
                        ? new Date(latestPost.data.created_date).toLocaleDateString("ko-KR")
                        : ""}
                    </span>
                    <span class="inline-flex items-center gap-1 text-purple-600 font-medium group-hover:gap-2 transition-all">
                      읽기
                      <ArrowRight class="w-4 h-4" />
                    </span>
                  </div>
                </div>
              </a>
            )
          }

          <!-- Showcase Card -->
          <a
            href="/showcase"
            class="group lg:col-span-1 bg-linear-to-br from-green-50 to-teal-50 rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-green-100"
          >
            <div class="h-full flex flex-col justify-between">
              <div>
                <Rocket class="w-10 h-10 text-green-600 mb-4" />
                <h3
                  class="text-xl font-bold text-text mb-2 group-hover:text-green-600 transition-colors"
                >
                  Showcase
                </h3>
                  <p class="text-text-light text-sm mb-4">직접 만든 프로젝트들을 확인해보세요</p>
              </div>
              <span
                class="inline-flex items-center gap-1 text-green-600 font-medium text-sm group-hover:gap-2 transition-all"
              >
                보러가기
                <ArrowRight class="w-4 h-4" />
              </span>
            </div>
          </a>

          <!-- Tech Stack Card -->
          <div
            class="lg:col-span-1 bg-linear-to-br from-blue-50 to-cyan-50 rounded-2xl p-6 shadow-lg border border-blue-100"
          >
            <div class="h-full flex flex-col">
              <Code2 class="w-10 h-10 text-blue-600 mb-4" />
              <h3 class="text-xl font-bold text-gray-900 mb-3">Tech Stack</h3>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium"
                  >React</span
                >
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium"
                  >Next.js</span
                >
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium"
                  >TypeScript</span
                >
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium"
                  >Astro</span
                >
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium"
                  >Spring Boot</span
                >
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium"
                  >Cloudflare</span
                >
              </div>
            </div>
          </div>

          <!-- About Me Card -->
          <a
            href="/portfolio"
            class="group lg:col-span-2 bg-linear-to-br from-orange-50 to-yellow-50 rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-orange-100"
          >
            <div class="h-full flex flex-col justify-between">
              <div>
                <Brain class="w-10 h-10 text-orange-600 mb-4" />
                <h3
                  class="text-xl font-bold text-gray-900 mb-2 group-hover:text-orange-600 transition-colors"
                >
                  About 덕환
                </h3>
                <p class="text-gray-600 text-sm">수학도에서 AI 활용 개발자로 전환한 김덕환</p>
              </div>
              <span
                class="inline-flex items-center gap-1 text-orange-600 font-medium text-sm mt-4 group-hover:gap-2 transition-all"
              >
                더 알아보기
                <ArrowRight class="w-4 h-4" />
              </span>
            </div>
          </a>

          <!-- Achievement Badge 1 -->
          <div
            class="lg:col-span-1 bg-linear-to-br from-yellow-50 to-amber-50 rounded-2xl p-6 shadow-lg border border-yellow-100"
          >
            <div class="h-full flex flex-col justify-center items-center text-center">
              <div
                class="w-14 h-14 mb-3 rounded-full bg-yellow-100 flex items-center justify-center"
              >
                <Award class="w-8 h-8 text-yellow-600" />
              </div>
               <h3 class="text-lg font-bold text-text mb-1">청룡톤 2026</h3>
               <p class="text-text-light text-sm">119-ai 트랙 대상</p>
            </div>
          </div>

          <!-- Achievement Badge 2 -->
          <div
            class="lg:col-span-1 bg-linear-to-br from-indigo-50 to-purple-50 rounded-2xl p-6 shadow-lg border border-indigo-100"
          >
            <div class="h-full flex flex-col justify-center items-center text-center">
              <div
                class="w-14 h-14 mb-3 rounded-full bg-indigo-100 flex items-center justify-center"
              >
                <Medal class="w-8 h-8 text-indigo-600" />
              </div>
               <h3 class="text-lg font-bold text-text mb-1">UMC 9기 해커톤</h3>
               <p class="text-text-light text-sm">2026 대상 수상</p>
            </div>
          </div>

          <!-- Featured Project: agentgram -->
          <a
            href="https://agentgram.co"
            target="_blank"
            rel="noopener noreferrer"
            class="group lg:col-span-1 bg-linear-to-br from-violet-50 to-purple-50 rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-violet-100"
          >
            <div class="h-full flex flex-col justify-between">
              <div>
                <div
                  class="w-14 h-14 mb-3 rounded-full bg-violet-100 flex items-center justify-center"
                >
                  <Users class="w-8 h-8 text-violet-600" />
                </div>
                <h3
              class="text-lg font-bold text-text mb-1 group-hover:text-violet-600 transition-colors"
                >
                  agentgram
                </h3>
            <p class="text-text-light text-sm">Open-Source AI Agent Network</p>
              </div>
              <span
                class="inline-flex items-center gap-1 text-violet-600 font-medium text-sm mt-3 group-hover:gap-2 transition-all"
              >
                agentgram.co
                <ArrowRight class="w-4 h-4" />
              </span>
            </div>
          </a>

          <!-- Featured Project: Finders -->
          <a
            href="https://finders.it.kr"
            target="_blank"
            rel="noopener noreferrer"
            class="group lg:col-span-1 bg-linear-to-br from-blue-50 to-cyan-50 rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-blue-100"
          >
            <div class="h-full flex flex-col justify-between">
              <div>
                <div
                  class="w-14 h-14 mb-3 rounded-full bg-blue-100 flex items-center justify-center"
                >
                  <Server class="w-8 h-8 text-blue-600" />
                </div>
                <h3
              class="text-lg font-bold text-text mb-1 group-hover:text-blue-600 transition-colors"
                >
                  Finders
                </h3>
            <p class="text-text-light text-sm">Backend Lead, GCP Infra</p>
              </div>
              <span
                class="inline-flex items-center gap-1 text-blue-600 font-medium text-sm mt-3 group-hover:gap-2 transition-all"
              >
                finders.it.kr
                <ArrowRight class="w-4 h-4" />
              </span>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>

  <!-- Vanta.js requires THREE on window object - use CDN for reliable loading -->
  <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
  <script is:inline src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js"></script>
  <script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      // Initialize Vanta.js WAVES effect on hero section
      var heroSection = document.getElementById("hero-section");
      if (heroSection && window.VANTA) {
        window.VANTA.WAVES({
          el: heroSection,
          mouseControls: true,
          touchControls: true,
          gyroControls: false,
          minHeight: 200.0,
          minWidth: 200.0,
          scale: 1.0,
          scaleMobile: 1.0,
          color: 0x7c3aed,
          shininess: 35.0,
          waveHeight: 15.0,
          waveSpeed: 0.75,
          zoom: 0.85,
        });
      }
    });
  </script>

  <script>
    import { setupScrollAnimations } from "@/shared/scripts/scroll-animation";
    document.addEventListener("DOMContentLoaded", () => {
      setupScrollAnimations();
    });
  </script>
</Layout>
