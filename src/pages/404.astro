---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE } from "@/shared/config/consts";
import { FileQuestion, ArrowRight } from "lucide-astro";

const title = `404 Not Found - ${SITE_TITLE}`;
const description = "잘못 들어온 것 같아요! 만약 버그가 있다면 메일로 알려주세요.";
---

<Layout title={title} description={description}>
  <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center p-8">
    <div
      class="text-center max-w-xl mx-auto py-12 px-8 bg-primary/20 rounded-2xl shadow relative overflow-hidden md:py-8 md:px-6"
    >
      <div
        class="inline-block px-4 py-2 bg-accent/10 text-accent rounded-full text-sm font-medium mb-6"
      >
        404 Error
      </div>
      <h1 class="text-3xl md:text-4xl mb-4 text-text font-bold tracking-tight">Page Not Found</h1>
      <p class="text-lg text-primary mb-8 leading-relaxed md:text-base">
        잘못 들어온 것 같아요! 만약 버그가 있다면 메일로 알려주세요.
      </p>
      <div class="relative w-32 h-32 mx-auto mb-8 md:w-24 md:h-24">
        <FileQuestion class="lost-file text-primary w-full h-full" />
      </div>
      <div class="action-buttons mb-6">
        <a
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-text rounded-xl no-underline font-semibold transition-all duration-200 hover:bg-accent-mint hover:-translate-y-px"
        >
          홈으로 가기
          <ArrowRight class="w-5 h-5 transition-transform duration-200 group-hover:translate-x-1" />
        </a>
      </div>
      <p class="help-text text-sm text-primary m-0 md:text-xs">
        급한 일이 있다면 <a
          href="/contact"
          class="contact-link text-accent no-underline font-medium transition-all duration-200 border-b border-transparent hover:border-accent"
          >메일로 알려주세요</a
        >
      </p>
    </div>
  </div>
</Layout>

<style>
  /* Keep keyframe animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes blink {
    0%,
    100% {
      transform: scale(1);
    }
    95% {
      transform: scaleY(0.1);
    }
  }

  /* Apply animation to the SVG */
  .lost-file {
    animation: float 6s ease-in-out infinite;
  }

  /* Style for the eyes dots */
  .eyes::before,
  .eyes::after {
    content: "";
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-text);
    animation: blink 3s ease-in-out infinite;
  }
</style>
