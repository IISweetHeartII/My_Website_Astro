const featuredTags = [
    'ChatGPT',
    'AI', 
    'Astro',
    'Í∞úÎ∞ú',
    'SEO',
    'ÏÉùÏÇ∞ÏÑ±',
    'ÏùºÏÉÅ'
];

// ÌëúÏãúÌï† ÌÉúÍ∑∏Îì§ ÏÑ†Î≥Ñ (ÌïµÏã¨ ÌÉúÍ∑∏ Ïö∞ÏÑ†)
const priorityTags = featuredTags.filter(tag => allTags.includes(tag));
const otherTags = allTags.filter(tag => !featuredTags.includes(tag));
const displayTags = [...priorityTags, ...otherTags.slice(0, 8 - priorityTags.length)];
const remainingTags = otherTags.slice(8 - priorityTags.length);
