---
import FormattedDate from './FormattedDate.astro';
import { getUrl } from '@/utils/url';
import { ArrowRight } from 'lucide-astro';

interface Props {
    title: string;
    description?: string;
    date?: Date;
    slug: string;
    dataTitle: string;
    dataTags: string;
    dataDescription: string;
}

const { title, description, date, slug, dataTitle, dataTags, dataDescription } = Astro.props;
---

<article class="relative rounded-lg bg-primary shadow-md transition-all duration-300 ease-in-out overflow-hidden hover:-translate-y-1 hover:shadow-xl"
    data-title={dataTitle}
    data-tags={dataTags}
    data-description={dataDescription}
>
    <a href={getUrl(`/blog/${slug}/`)} class="block text-inherit no-underline" transition:name={`blog-card-${slug}`}>
        <div class="relative z-10 p-4 flex flex-col gap-3 h-full md:p-5">
            <div class="flex-1 flex flex-col gap-2">
                <h2 class="text-xl font-semibold leading-tight mt-2 text-background transition-colors duration-200 ease-in-out group-hover:text-accent">
                    {title}
                </h2>
                {description && <p class="text-background leading-relaxed line-clamp-3">{description}</p>}
            </div>

            <div class="flex justify-between items-center mt-auto pt-4 border-t border-primary-light">
                {date && (
                    <time class="text-sm text-background">
                        <FormattedDate date={date} />
                    </time>
                )}
                <div class="inline-flex items-center gap-2 text-sm font-medium text-accent transition-all duration-300 ease-in-out group-hover:gap-3">
                    Read More
                    <ArrowRight class="w-[18px] h-[18px]" strokeWidth={1.5} />
                </div>
            </div>
        </div>
    </a>
</article> 