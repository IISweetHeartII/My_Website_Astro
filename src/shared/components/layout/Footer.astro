---
import { Github, Linkedin, Mail } from "lucide-astro";
import { AUTHOR_GITHUB, AUTHOR_LINKEDIN } from "@/shared/config/consts";

const today = new Date();
---

<footer class="bg-primary text-background body-font py-8">
  <div class="container mx-auto px-5 flex flex-col items-center">
    <!-- Social Links -->
    <div class="flex space-x-6 mb-6">
      <a
        href={AUTHOR_GITHUB}
        target="_blank"
        rel="noopener noreferrer"
        class="text-background hover:text-primary hover:bg-white hover:bg-opacity-20 rounded-full p-3 transition-all duration-300 ease-out hover:-translate-y-1 hover:shadow-lg"
        title="GitHub"
      >
        <Github class="w-6 h-6" />
      </a>

      <a
        href={AUTHOR_LINKEDIN}
        target="_blank"
        rel="noopener noreferrer"
        class="text-background hover:text-primary hover:bg-white hover:bg-opacity-20 rounded-full p-3 transition-all duration-300 ease-out hover:-translate-y-1 hover:shadow-lg"
        title="LinkedIn"
      >
        <Linkedin class="w-6 h-6" />
      </a>

      <a
        href="mailto:sachi009955@gmail.com"
        class="text-background hover:text-primary hover:bg-white hover:bg-opacity-20 rounded-full p-3 transition-all duration-300 ease-out hover:-translate-y-1 hover:shadow-lg"
        title="Email"
      >
        <Mail class="w-6 h-6" />
      </a>
    </div>

    <!-- Policy Links -->
    <div class="text-background flex flex-wrap justify-center gap-4 mb-4">
      <a
        href="/privacy"
        class="text-white hover:text-purple-200 text-sm transition-colors duration-200 underline"
      >
        개인정보처리방침
      </a>
      <span class="text-white text-sm">•</span>
      <a
        href="/terms"
        class="text-white hover:text-purple-200 text-sm transition-colors duration-200 underline"
      >
        이용약관
      </a>
    </div>

    <!-- Copyright -->
    <div class="text-sm text-center">
      <p>&copy; {today.getFullYear()} KIM DEOG HWAN. All rights reserved.</p>
    </div>
  </div>
</footer>
