---
interface Props {
  number: string;
  label: string;
  icon?: string;
  gradient?: string;
  delay?: number;
}

const {
  number,
  label,
  icon = "âœ¨",
  gradient = "from-blue-500 to-purple-500",
  delay = 0,
} = Astro.props;
---

<div
  class="scroll-animate group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden"
  style={`animation-delay: ${delay}s`}
>
  <!-- Background Gradient (subtle) -->
  <div
    class={`absolute inset-0 bg-linear-to-br ${gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}
  >
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center">
    <!-- Icon -->
    <div class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-500">
      {icon}
    </div>

    <!-- Number -->
    <div
      class={`text-4xl md:text-5xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r ${gradient}`}
    >
      {number}
    </div>

    <!-- Label -->
    <div class="text-lg text-gray-600 font-medium">{label}</div>
  </div>

  <!-- Decorative Element -->
  <div
    class={`absolute -bottom-2 -right-2 w-24 h-24 bg-linear-to-br ${gradient} opacity-10 rounded-full group-hover:scale-150 transition-transform duration-700`}
  >
  </div>
</div>
