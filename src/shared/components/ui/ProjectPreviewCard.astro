---
interface Props {
  title: string;
  description: string;
  tags: string[];
  link?: string;
  image?: string;
  gradient?: string;
  delay?: number;
}

const {
  title,
  description,
  tags,
  link,
  image,
  gradient = "from-blue-500 to-purple-500",
  delay = 0,
} = Astro.props;
---

<a
  href={link || "#"}
  class="scroll-animate group block relative bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2"
  style={`animation-delay: ${delay}s`}
  target={link && link.startsWith("http") ? "_blank" : undefined}
  rel={link && link.startsWith("http") ? "noopener noreferrer" : undefined}
>
  <!-- Gradient Accent Bar (left) -->
  <div
    class={`absolute left-0 top-0 bottom-0 w-1.5 bg-gradient-to-b ${gradient} transform origin-top scale-y-0 group-hover:scale-y-100 transition-transform duration-500 ease-out`}
  >
  </div>

  <!-- Image (if provided) -->
  {
    image && (
      <div class="relative h-48 overflow-hidden bg-gray-100">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
      </div>
    )
  }

  <!-- Content -->
  <div class="p-6">
    <!-- Title -->
    <h3
      class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors duration-300 mb-3 flex items-center justify-between gap-2"
    >
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transform group-hover:translate-x-1.5 transition-all duration-500"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </h3>

    <!-- Description -->
    <p class="text-gray-600 leading-relaxed mb-4">
      {description}
    </p>

    <!-- Tags -->
    {
      tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="px-2.5 py-1 bg-gray-100 text-gray-700 text-sm rounded-lg group-hover:bg-blue-50 group-hover:text-blue-700 transition-colors duration-300">
              #{tag}
            </span>
          ))}
        </div>
      )
    }
  </div>
</a>
