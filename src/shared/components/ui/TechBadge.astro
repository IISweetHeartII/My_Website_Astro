---
interface Props {
  name: string;
  icon?: string;
  category?: "frontend" | "backend" | "ai" | "tool" | "other";
  delay?: number;
}

const { name, icon, category = "other", delay = 0 } = Astro.props;

const categoryStyles = {
  frontend: {
    bg: "from-blue-500 to-cyan-500",
    border: "border-blue-200",
    text: "text-blue-700",
  },
  backend: {
    bg: "from-green-500 to-emerald-500",
    border: "border-green-200",
    text: "text-green-700",
  },
  ai: {
    bg: "from-purple-500 to-pink-500",
    border: "border-purple-200",
    text: "text-purple-700",
  },
  tool: {
    bg: "from-orange-500 to-red-500",
    border: "border-orange-200",
    text: "text-orange-700",
  },
  other: {
    bg: "from-gray-500 to-slate-500",
    border: "border-gray-200",
    text: "text-gray-700",
  },
};

const style = categoryStyles[category];
---

<div
  class={`scroll-animate group relative inline-flex items-center gap-2 px-4 py-2.5 bg-white border-2 ${style.border} rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 hover:scale-105`}
  style={`animation-delay: ${delay}s`}
>
  <!-- Gradient Background (on hover) -->
  <div
    class={`absolute inset-0 bg-gradient-to-r ${style.bg} opacity-0 group-hover:opacity-10 rounded-xl transition-opacity duration-300`}
  >
  </div>

  <!-- Content -->
  <div class="relative z-10 flex items-center gap-2">
    {icon && <span class="text-xl">{icon}</span>}
    <span
      class={`font-semibold ${style.text} group-hover:scale-105 transition-transform duration-300`}
    >
      {name}
    </span>
  </div>
</div>
